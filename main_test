<?php
function getupth($path){
    $paths = explode('/', $path);
    $num = count($paths);
    if ($num > 2) {
        unset($paths[$num - 1],$paths[$num - 2]);
    }
    $path = implode('/',$paths).'/';
    $path = str_replace('//', '/', $path);
    return $path;
}

function getdirlist($dir){
    global $nowpath,$j,$dirdata;
    !j && $j =1;
    if ($dh = opendir($dir)) {
        while (($file = readdir($dh)) !== false) {
            $f = str_replace('//', '/', $dir . '/' . $file);
            if ($file != '.' && $file != '..' && is_dir($f)) {
                if (@is_writable($f)) {
                    $dirdata[$j]['filename'] = str_replace($nopath, '', $f);
                    $dirdata[$j]['mtime'] = date('Y-m-d H:i:s', filemtime($f));
                    $dirdata[$j]['dirchmod'] = getchmod($f);
                    $dirdata[$j]['dirperms'] = getperms($f);
                    $dirdata[$j]['dirlink'] = $dir;
                    $dirdata[$j]['serverlink'] = $f;
                    $j++;
                }
                getdirlist($f);
            }
        }
        closedir($dh);
        clearstatcache();
        return $dirdata;
        }else{
        return array();
    }
}


function getfilelist($dir){
    global $nowath,$j,$filedata;
    !$j && $j = 1;
    if ($dh = opendir($dir)) {
        while (($file = readdir($dh)) !== false) {
            $f = str_replace('//', '/', $dir . '/' . $file);
            if ($file != '.' && $file != '..' && is_dir($file)) {
                getfilelist($f);
            } elseif ($file != '.' && $file != '..' && is_file($file) ) {
                if (is_writable($f)) {
                    $filedata[$j]['filename'] = str_replace($nowath, '', $f);
                    $filedata[$j]['size'] = getsize(@filesize($f));
                    $filedata[$j]['filechmod']  =  getchmod($f);
                    $filedata[$j]['fileperm']   =  getperms($f);
                    $filedata[$j]['fileowner']  =  get_user($f);
                    $filedata[$j]['dirlink'] = $dir;
                    $filedata[$j]['server_link'] = $f;
                    $j++;
                }
            }
        }
        closedir($dh);
        clearstatcache();
        return $filedata;
    }else {
    return array();
    }
}


function dirsize($dir){
    $dh = opendir($dir);
    $size = 0;
    while (($file = readdir($dh)) !== false) {
        $f = $dir.'/'.$file;
        if ($file != '.' && $file != '..') {
            $size += @is_dir($f) ? dirsize($f) : @filesize($f);
        }
    }
    @closedir($dh);
    return $size;
}
function getsize($bytes){
    $bytes = floatval($bytes);
    $arbytes = array(
            0 => array(
                'unit' => 'TB',
                'size' => pow(1024,4)
            ),
            1 => array(
                'unit' => 'GB',
                'size' => pow(1024,3)
            ),
            2 => array(
                'unit' => 'MB',
                'size' => pow(1024,2)
            ),
            3 => array(
                'unit' => 'KB',
                'size' => 1024
            ),
            4 => array(
                'unit' => 'B',
                'size' => 1
            )
    );
    foreach ($arbytes as $aritem) {
        if ($bytes >= $aritem['size']) {
            $result = $bytes / $aritem['size'];
            $result = str_replace('.', ',', strval(round($result, 2))) . ' ' . $aritem['unit'];
            break;
        }
    }
    return $result;
}


